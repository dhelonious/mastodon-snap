#!/bin/bash -e

. "$SNAP/mastodon.env"

check_root
check_setup
check_service postgres

echo "CAUTION: This command will make changes to your database!"
echo "Make sure that you have a recent database export."
read -rp "Do you want to continue? [y/N] " response
if ! [[ "$response" =~ ^([yY])$ ]]; then
    exit 0
fi

mastodon_db_rollback "$@"
