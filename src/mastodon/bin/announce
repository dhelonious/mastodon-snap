#!/bin/bash -e

. "$SNAP/mastodon.env"
. "$SNAP/postgres.env"

check_root
check_setup

print_usage() {
    echo "Usage: $SNAP_NAME.announce [-p PUBLISH] TEXT"
}

if [ -z "$1" ]; then
    print_usage
    exit 1
fi

export PUBLISH_FLAG=t

while getopts "p:h" OPTION; do
    case "$OPTION" in
    p)
        case "$OPTARG" in
            true|yes)
                export PUBLISH_FLAG=t
                ;;
            false|no)
                export PUBLISH_FLAG=f
                ;;
            *)
                echo_error "The value of -p must be boolean"
                exit 1
                ;;
        esac
        ;;
    h)
        print_usage
        exit 0
        ;;
    esac
done
shift "$(($OPTIND-1))"

if mastodon_add_announcement "$@" > /dev/null; then
    load_tootctl_tuning_env
    mastodon_tootctl cache clear --concurrency $TOOTCTL_CONCURRENCY
fi
