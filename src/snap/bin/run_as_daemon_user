#!/bin/bash -e

. "$SNAP/snap.env"

# TODO: Remove old daemon user if no longer required
if [ "$(id -un)" = "$DAEMON_USER" ]; then
    "$@" \
    || setpriv --clear-groups --reuid $OLD_DAEMON_USER --regid $OLD_DAEMON_USER -- "$@"
else
    setpriv --clear-groups --reuid $DAEMON_USER --regid $DAEMON_USER -- "$@" \
    || setpriv --clear-groups --reuid $OLD_DAEMON_USER --regid $OLD_DAEMON_USER -- "$@"
fi
